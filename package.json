{
  "name": "slack-shared-ui",
  "version": "1.0.7",
  "description": "Shared components for chat app",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "private": true,
  "exports": {
    ".": "./dist/index.js",
    "./components": "./dist/components/*",
    "./tailwind.config.js": "./tailwind.config.js"
  },
  "scripts": {
    "build:js": "webpack --mode production",
    "build:types": "tspc",
    "build": "npm run build:js && npm run build:types",
    "start": "webpack serve --mode development",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --config eslint.config.mjs",
    "lint:fix": "eslint \"src/**/*.{ts,tsx}\" --fix --config eslint.config.mjs",
    "prepare": "husky",
    "transpile-css": "npx tailwindcss -i ./src/main.css -o ./dist/tailwind.css",
    "test": "jest",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "rebuild:powershell": "Remove-Item -Recurse -Force dist; npm run build",
    "rebuild:cmd": "rmdir /s /q dist && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/trungh97/slack_shared_ui.git"
  },
  "author": "hqtrung",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/trungh97/slack_shared_ui/issues"
  },
  "homepage": "https://github.com/trungh97/slack_shared_ui#readme",
  "dependencies": {
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.25.9",
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "@babel/preset-typescript": "^7.26.0",
    "@chromatic-com/storybook": "^3.2.2",
    "@eslint/js": "^9.16.0",
    "@module-federation/typescript": "^3.1.3",
    "@storybook/addon-essentials": "^8.4.7",
    "@storybook/addon-interactions": "^8.4.7",
    "@storybook/addon-onboarding": "^8.4.7",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.5",
    "@storybook/blocks": "^8.4.7",
    "@storybook/react": "^8.4.7",
    "@storybook/react-webpack5": "^8.4.7",
    "@storybook/test": "^8.4.7",
    "@storybook/types": "^8.4.7",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.1",
    "@types/webpack": "^5.28.5",
    "@webpack-cli/generators": "^3.0.7",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "css-loader": "^7.1.2",
    "eslint": "^9.16.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-storybook": "^0.11.1",
    "globals": "^15.13.0",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.1.1",
    "prettier": "3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.9",
    "storybook": "^8.4.7",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.16",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.3.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "typescript-transform-paths": "^3.5.3",
    "webpack": "^5.96.1",
    "webpack-dev-server": "^5.1.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "files": [
    "dist/**/*",
    "tailwind.config.js"
  ]
}
